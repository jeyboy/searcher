!!!
%html
  %head
    %title Searcher
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "main/application"
    = csrf_meta_tags
  %body
    #page
      #wrap
        #header
          #controls.bg.content_block
            = link_to image_tag("logo_small.png", :size => "100x100", :class => "fl"), '/'
            %ul.fl
              %li= link_to "Add post", new_post_path
              %li= link_to "Posts", relevant_posts_path
              %li= link_to "Categories", categories_path
            #search.fr
              = form_for :search, :url => search_posts_path, :html => {:method => :get} do |f|
                = f.text_field :search
                = f.submit '>>', :class => 'btn'
            .cb
        #content.content_block
          = yield
    #footer.bg.content_block
      .m0a.w60
        .m0a.w30
          = "Created by craaaaaaazy (O_o)"
          = Time.now.year