%div.content_block.bg[post]
  = render :partial => "posts/post_header", :locals => {:post => post, :show_topic => true}
  .content_block
    != post.pretty_preview
  .read_more.btn.btn-primary.fr= link_to "Read more", post_path(post)
  .cb

  = render :partial => "tags/tag_list", :locals => {:post => post}

