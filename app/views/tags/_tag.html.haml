%p.tag.fl
  - if defined?(as_text) && as_text
    %span.tag_name= tag_name
  - else
    = link_to tag_name, index_by_tags_posts_path(:tags => [tag_name]), :class => "tag_name"
  - if defined?(controls) && controls
    %span
      = link_to image_tag('buttons/close.png', :size => "22x22", :class => "vam"), "#", :onclick => "deleteTag(this); return false;", :rel => (post_id rescue nil)